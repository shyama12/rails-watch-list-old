<div class="bg-white p-5 w-45 rounded">
  <h3>Add a review for this list</h3>
  <%= simple_form_for [list, review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Rating", input_html: { data: { controller: "star-rating" } } %>
    <%= f.input :name %>
    <%= f.submit "Post your review", class: 'btn btn-success text-white' %>
  <% end %>
</div>
